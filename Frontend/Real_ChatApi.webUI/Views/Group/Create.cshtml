@model Real_ChatApi.Dtos.GroupDtos.CreateGroupDto

@{
    ViewData["Title"] = "Yeni Grup Oluştur";
    Layout = "_Layout";
    var userList = ViewBag.Users as List<SelectListItem>;
}

<h2 class="text-center mt-4">Yeni Grup Oluştur</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="form p-4 shadow rounded bg-light">
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Grup adı" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-check mb-3">
                @Html.CheckBoxFor(m => m.IsPrivate, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.IsPrivate, new { @class = "form-check-label" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.InitialMemberUserIds, "Grup Üyeleri", new { @class = "form-label" })
                @Html.ListBoxFor(m => m.InitialMemberUserIds, userList, new { @class = "form-control", size = "6" })
                <small class="form-text text-muted">Birden fazla kullanıcı seçebilirsiniz.</small>
            </div>

            @Html.HiddenFor(m => m.CreatedByUserId)

            <button type="submit" class="btn btn-primary w-100">Grubu Oluştur</button>
        </form>
    </div>
</div>
