@model List<Real_ChatApi.Dtos.UserGroups.GroupMemberDto>

@{
    ViewData["Title"] = "Grup Üyeleri";
    Layout = "_Layout";
    var groupId = ViewBag.GroupId as Guid? ?? Guid.Empty;
}

<h2 class="mb-4">Grup Üyeleri</h2>

@if (!Model.Any())
{
    <p>Bu grupta henüz üye yok.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Kullanıcı Adı</th>
                <th>Admin</th>
                <th>Katılım Tarihi</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.UserName</td>
                    <td>
                        @if (member.IsAdmin)
                        {
                            <span class="badge bg-success">Admin</span>
                        }
                    </td>
                    <td>@member.JoinedAt.ToString("g")</td>
                    <td>
                        <form asp-action="RemoveUser" method="post" style="display:inline;">
                            <input type="hidden" name="GroupId" value="@groupId" />
                            <input type="hidden" name="UserId" value="@member.UserId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Üyeyi gruptan çıkarmak istediğinize emin misiniz?');">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="AddUser" asp-route-groupId="@groupId" class="btn btn-primary mt-3">Yeni Üye Ekle</a>
}
