
@using Real_ChatApi.Dtos.UserDtos
@model RegisterUserDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Register</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-6 col-lg-5 col-xl-4 mx-auto">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-4 text-center">

                            <form asp-action="Index" asp-controller="Register" method="post" style="max-width: 320px; margin: 0 auto;">

                                <div class="mb-md-4 mt-md-3 pb-4">
                                    <h2 class="fw-bold mb-3 text-uppercase">Register</h2>
                                    <p class="text-white-50 mb-4">Please enter your details to register!</p>

                                    <div class="form-outline form-white mb-3">
                                        <input asp-for="UserName" class="form-control form-control-lg" placeholder="User Name" style="width: 100%;" />
                                    </div>

                                    <div class="form-outline form-white mb-3">
                                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" style="width: 100%;" />
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password" />

                                    </div>

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit" style="width: 100%;">Register</button>
                                </div>

                                <div>
                                    <p class="mb-0">
                                        Do you have an account?
                                        <a asp-controller="Login" asp-action="Index" class="text-white-50 fw-bold">Login</a>
                                    </p>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
